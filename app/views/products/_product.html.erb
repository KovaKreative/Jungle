<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div class="align-content-stretch">
    <% if product.quantity <= 0 %>
      <h5 class="badge bg-danger text-white d-flex flex-column justify-content-center py-2 px-4 m-0">Sold Out</h5>
      <button class="btn btn-success disabled" disabled><i class="fa fa-shopping-cart"></i> Add</button>
    <% else %>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' ,
      method: :post do %>
        <%= fa_icon "shopping-cart", text: 'Add' %> 
      <% end %>
    <% end %>
  </div>
</article>
