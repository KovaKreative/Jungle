<h1>Login</h1>

<%= form_tag '/login' do %>
<div class="row my-2">
  <div class="form-group col-6">
    Email<%= text_field_tag :email, '' , class: "form-control", :required => 'required' %>
  </div>
  <div class="form-group col-6">
  Password<%= password_field_tag :password, '' , class: "form-control", :required => 'required' %>
  </div>
</div>
  <div class="form-group col-12 my-4 d-flex justify-content-center">
  <%= submit_tag "Submit", class: "btn btn-primary" %>
  </div>

<% end %>