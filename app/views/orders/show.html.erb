<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
  <% @items.each do |item| %>
    <%= render 'item', product: Product.find(item[:product_id]), item: item  %>
  <% end %>

  <div class="my-5 order-summary jumbotron">
    <h4>Total: <%= humanized_money_with_symbol @order.total_cents / 100.00 %></h4>
    <h3>Thank you, <%= @order.email %>, for your order!</h3>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
